<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <com.youth.banner.Banner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:indicator_drawable_selected="@drawable/indicator_select"
        app:indicator_drawable_unselected="@drawable/indicator_unselect"/>
    <TextView
        android:id="@+id/letter"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center|left"
        android:paddingLeft="@dimen/padding_edge_common"
        android:text="热门品牌"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_size_title" />

    <com.lexing.passenger.views.WrapHeightGridView
        android:id="@+id/gridview_hot_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/transparent"
        android:numColumns="5"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/padding_edge_common"
        android:paddingRight="@dimen/padding_edge_common"
        android:scrollbars="none"
        android:verticalSpacing="10dp"
        android:layout_marginBottom="@dimen/padding_edge_common"/>


</LinearLayout>
