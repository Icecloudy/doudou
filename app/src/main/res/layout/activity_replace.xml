<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_gray"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context="com.lexing.passenger.ui.main.replace.ReplaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_edge_common"
            android:layout_marginRight="@dimen/padding_edge_common"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gray_border_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_clickable_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_book_time"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:text="用车时间"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/tvBookingTime"
                    style="@style/TextView.Right"
                    android:hint="请选择用车时间"
                    android:textColor="@color/text_title" />
            </RelativeLayout>

            <View
                style="@style/LineEdge"
                android:layout_marginLeft="@dimen/padding_edge_common" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_clickable_item">

                <EditText
                    android:id="@+id/tvReplaceUser"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_common_clickable_item"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawableLeft="@drawable/ic_replace_user"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_replace_user"
                    android:hint="乘车人"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_hint" />

                <RadioGroup
                    android:id="@+id/sexRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_edge_common"
                        android:background="@drawable/select_replace_user_bg"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="30dp"
                        android:paddingRight="15dp"
                        android:text="先生" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding_edge_common"
                        android:background="@drawable/select_replace_user_bg"
                        android:button="@null"
                        android:gravity="center_vertical|end"
                        android:paddingLeft="30dp"
                        android:paddingRight="15dp"
                        android:text="女士" />
                </RadioGroup>

            </RelativeLayout>

            <View
                style="@style/LineEdge"
                android:layout_marginLeft="@dimen/padding_edge_common" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_clickable_item">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_replace_phone"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:text="手机号"
                    android:textColor="@color/text_hint" />

                <EditText
                    android:id="@+id/tvReplaceMobile"
                    style="@style/TextView.Right"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/text_title" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_edge_common"
            android:layout_marginRight="@dimen/padding_edge_common"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gray_border_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_clickable_item">


                <TextView
                    android:id="@+id/editSetOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_edge_common"
                    android:drawableLeft="@drawable/green_oval"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:hint="请选择出发地" />


                <ImageView
                    android:id="@+id/setOUtVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_edge_common"
                    android:padding="5dp"
                    android:src="@drawable/ic_voice" />
            </RelativeLayout>

            <View
                style="@style/LineEdge"
                android:layout_marginLeft="@dimen/padding_edge_common" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_common_clickable_item">

                <TextView
                    android:id="@+id/tvDestination"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_edge_common"
                    android:drawableLeft="@drawable/red_oval"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:hint="请选择目的地" />


                <ImageView
                    android:id="@+id/destinationVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padding_edge_common"
                    android:padding="5dp"
                    android:src="@drawable/ic_voice" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_edge_common"
            android:layout_marginRight="@dimen/padding_edge_common"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_gray_border_bg"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约" />

                <TextView
                    android:id="@+id/tvEstimatedCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0.0元"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="@dimen/padding_edge_common"
                android:text="预估费用仅供参考，实际费用可能因交通情况、天气 等因素而不同" />
        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnCallCarImmediately"
            style="@style/Button.Primary"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/padding_edge_common"
            android:layout_marginRight="@dimen/padding_edge_common"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_enable_clickable"
            android:text="确认用车"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
