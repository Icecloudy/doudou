<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wxpay_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lexing.passenger.wxapi.WXPayEntryActivity">
    <TextView
        android:visibility="gone"
        android:id="@+id/pay_success"
        android:drawablePadding="12dp"
        android:text="支付成功，正在为您返回"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pay_fail"
        android:drawablePadding="12dp"
        android:text="支付失败，请重试"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
