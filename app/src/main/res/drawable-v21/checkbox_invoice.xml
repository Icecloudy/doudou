<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:gravity="center">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:left="@dimen/padding_edge_common">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/pay_select_bg"/>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:gravity="center">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:left="@dimen/padding_edge_common">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/pay_select_bg"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:gravity="center">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:left="@dimen/padding_edge_common">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/pay_select_bg"/>
            </item>
        </layer-list>
    </item>
    <item >
        <layer-list>
            <item >
                <shape android:gravity="center">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:left="@dimen/padding_edge_common">
                <bitmap
                    android:gravity="left"
                    android:src="@drawable/pay_unselect_bg"/>
            </item>
        </layer-list>
    </item>

</selector>
